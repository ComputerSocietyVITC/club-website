---
import comsoclogowhite from "/public/comsocLogowhite.webp";
import socialMediaLinks from "../data/socialMediaLinks";
import { routes } from "../data/routes";
import { Image } from "astro:assets";
---

<div class="w-[90vw] border mx-auto"></div>
<div class="bg-transparent relative z-0 p-16 scale-90">
  <footer>
    <div
      class="text-gray-800 hidden xl:grid xl:grid-cols-4 items-center place-items-center"
    >
      <a
        href="https://ieeecsvitc.com"
        class="self-center order-4 lg:order-1 md:flex-col md:flex sm:flex sm:flex-col"
      >
        <Image
          src={comsoclogowhite}
          alt="ieee cs vitc logo"
          height={500}
          width={500}
        />
      </a>
      <div
        class="h-full items-center py-12 lg:grid lg:grid-rows hidden order-1 lg:order-2"
      >
        <div
          class="text-lg lg:text-base text-white inline-block mb-3 custom-underline-gradient monospace-font font-bold"
        >
          Quick Links
        </div>
        {
          routes.map((route, index) => (
            <a
              href={route.href}
              class="my-2 block text-white hover:text-gray-200"
            >
              {route.title}
            </a>
          ))
        }
      </div>
      <div class="my-4 w-full order-2 lg:order-3">
        <div>
          <div
            class="text-lg sm:self-center md:self-center lg:text-base text-white inline-block custom-underline-gradient monospace-font font-bold"
          >
            Address
          </div>
          <a
            href="https://goo.gl/maps/c9ue9jlwnbafqpke7"
            target="_blank"
            rel="noreferrer"
            class="my-4 grid text-white grid-rows-3"
          >
            <section>Kelambakkam - Vandalur Rd,</section>
            <section>Rajan Nagar, Chennai,</section>
            <section>Tamil Nadu - 600127.</section>
          </a>
        </div>
        <div>
          <div
            class="text-lg sm:self-center md:self-center lg:text-base text-white inline-block mb-3 custom-underline-gradient monospace-font font-bold"
          >
            Email
          </div>
          <a
            href="mailto:ieeecomputersociety@vit.ac.in"
            target="_blank"
            rel="noreferrer"
            class="my-3 block text-white hover:text-gray-200 text-base lg:text-lg lg:text-left"
          >
            ieeecomputersociety@vit.ac.in
          </a>
        </div>
      </div>
      <div class="my-4 w-full flex flex-col justify-center lg:order-4">
        <div
          class="text-lg lg:text-base lg:text-center text-white inline-block mb-3 md:self-center sm:self-center custom-underline-gradient monospace-font font-bold"
        >
          Social Media
        </div>
        <div class="grid grid-cols-4 place-items-center">
          {
            socialMediaLinks.map((link, index) => (
              <div>
                <a href={link.url} target="_blank" rel="noreferrer">
                  <Image
                    src={link.icon}
                    alt={link.platform}
                    class="h-8 w-auto my-5"
                  />
                </a>
              </div>
            ))
          }
        </div>
      </div>
    </div>
    <div
      class="text-gray-800 hidden lg:flex lg:flex-col items-center xl:hidden"
    >
      <a
        href="https://ieeecsvitc.com"
        class="flex items-center justify-center order-1 mx-12"
      >
        <Image
          src={comsoclogowhite}
          alt="ieee cs vitc logo"
          height={500}
          width={500}
        />
      </a>
      <div class="flex w-full justify-around flex-wrap mt-3 order-2">
        <div class="py-6 hidden lg:block">
          <div
            class="text-lg lg:text-base text-white mb-3 custom-underline-gradient monospace-font font-bold"
          >
            Quick Links
          </div>
          {
            routes.map((route, index) => (
              <a
                href={route.href}
                class="my-3 block text-white hover:text-gray-200 text-sm"
              >
                {route.title}
              </a>
            ))
          }
        </div>
        <div class="mt-3 sm:w-screen md:w-screen w-full lg:w-3/12">
          <div>
            <div
              class="text-lg lg:text-base text-white mb-3 custom-underline-gradient monospace-font font-bold"
            >
              Address
            </div>
            <a
              href="https://goo.gl/maps/c9ue9jlwnbafqpke7"
              target="_blank"
              rel="noreferrer"
              class="my-3 block text-white hover:text-gray-200 text-base lg:text-sm"
            >
              <section>Kelambakkam - Vandalur Rd,</section>
              <section>Rajan Nagar, Chennai,</section>
              <section>Tamil Nadu - 600127.</section>
            </a>
          </div>
          <div>
            <div
              class="text-lg lg:text-base text-white mb-3 custom-underline-gradient monospace-font font-bold"
            >
              Email
            </div>
            <a
              href="mailto:ieeecomputersociety@vit.ac.in"
              target="_blank"
              rel="noreferrer"
              class="my-3 block text-white hover:text-gray-200 text-base lg:text-sm lg:text-left"
            >
              ieeecomputersociety@vit.ac.in
            </a>
          </div>
        </div>
        <div class="mt-3 w-full lg:w-3/12">
          <div
            class="text-lg lg:text-base text-center text-white mb-3 custom-underline-gradient monospace-font font-bold"
          >
            Social Media
          </div>
          <div class="grid grid-cols-4 place-items-center">
            {
              socialMediaLinks.map((link, index) => (
                <div>
                  <a href={link.url} target="_blank" rel="noreferrer">
                    <Image
                      src={link.icon}
                      alt={link.platform}
                      class="h-7 my-5 w-auto lg:mx-0"
                    />
                  </a>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
    <div class="text-gray-800 block lg:hidden items-center">
      <div class="flex justify-center">
        <a
          href="https://ieeecsvitc.com"
          class="flex items-center justify-center mx-12"
        >
          <Image
            src={comsoclogowhite}
            alt="ieee cs vitc logo"
            height={500}
            width={500}
          />
        </a>
      </div>
      <div
        class="flex justify-center flex-col items-center mt-3 max-[425px]:flex-col max-[425px]:space-x-0"
      >
        <div class="text-center my-4">
          <div
            class="text-lg text-white mb-3 custom-underline-gradient monospace-font font-bold"
          >
            Address
          </div>
          <a
            href="https://goo.gl/maps/c9ue9jlwnbafqpke7"
            target="_blank"
            rel="noreferrer"
            class="text-white hover:text-gray-200 text-base"
          >
            <section>Kelambakkam - Vandalur Rd,</section>
            <section>Rajan Nagar, Chennai,</section>
            <section>Tamil Nadu - 600127.</section>
          </a>
        </div>
        <div class="text-center my-4">
          <div
            class="text-lg text-white mb-3 custom-underline-gradient monospace-font font-bold"
          >
            Email
          </div>
          <a
            href="mailto:ieeecomputersociety@vit.ac.in"
            target="_blank"
            rel="noreferrer"
            class="block text-white hover:text-gray-200 text-base"
          >
            ieeecomputersociety@vit.ac.in
          </a>
        </div>
      </div>
      <div class="flex flex-col items-center mt-4">
        <div
          class="text-lg text-white mb-3 custom-underline-gradient monospace-font font-bold"
        >
          Social Media
        </div>
        <div class="flex justify-around flex-wrap gap-4 w-full">
          {
            socialMediaLinks.map((link, index) => (
              <div class="px-6 flex justify-center">
                <a href={link.url} target="_blank" rel="noreferrer">
                  <Image
                    src={link.icon}
                    alt={link.platform}
                    class="h-7 w-auto my-5"
                  />
                </a>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </footer>
</div>

<style>
  .custom-underline-gradient {
    display: inline-block;
    position: relative;
  }

  .custom-underline-gradient::after {
    content: "";
    display: block;
    width: 100%;
    height: 2px;
    background: linear-gradient(to right, #055a98, #6cedff);
    position: absolute;
    bottom: -2px;
    left: 0;
  }
</style>
