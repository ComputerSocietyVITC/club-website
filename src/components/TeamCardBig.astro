---
const { name, designation, imageUrl, linkUrl, gitUrl } = Astro.props;
---

<div
  class="rounded-[18px] md:rounded-[36px] p-0.5 bg-gradient-to-b from-[#6CEDFF] to-[#055A98] h-[553px] w-[300px] md:w-[350px] lg:w-[400px] m-4 cursor-pointer hover:shadow-2xl hover:shadow-[#7ac4ec]/30"
>
  <div
    class="rounded-[calc(18px-1px)] md:rounded-[calc(36px-1px)] p-[30px] bg-gradient-to-b from-[#061b24] from-2% via-[#072031] to-[#000b11] to-9% h-[549px]"
  >
    <div
      class="flex flex-col justify-center items-center gap-y-9 h-[100%] img-hover"
    >
      <img
        class="rounded-[50%] w-[220px] h-[220px] align-center mt-8 mb-4 img1"
        src={imageUrl}
        alt="none"
      />
      <div class="flex flex-col">
        <h2 class="text-white text-2xl font-bold text-center">
          {name}
        </h2>
        <h3 class="text-white text-xl font text-center pt-2">
          {designation}
        </h3>
        <div class="flex justify-center gap-x-6">
          <a href={linkUrl}>
            <img
              src="/socialmedia/linkedin.webp"
              alt="Linkedin"
              class="h-10 my-5 mx-auto lg:mx-0"
            />
          </a>
          <a href={gitUrl}>
            <img
              src="/socialmedia/github.webp"
              alt="Github"
              class="h-10 my-5 mx-auto lg:mx-0"
            />
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .font {
    font-family: "IBM Plex Mono", monospace !important;
    font-size: 1.1rem;
  }
</style>
