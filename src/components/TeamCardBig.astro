---
const { name, designation, imageUrl, linkUrl, gitUrl } = Astro.props;
---

    <div
      class="flex flex-col justify-center items-center gap-y-9 h-[100%] img-hover"
    >
      <img
        class="rounded-[50%] w-[220px] h-[220px] align-center mt-8 mb-4 img1"
        src={imageUrl}
        alt="none"
      />
      <div class="flex flex-col">
        <h2 class="text-white text-2xl font-bold text-center">
          {name}
        </h2>
        <h3 class="text-white text-xl font text-center pt-2">
          {designation}
        </h3>
        <div class="flex justify-center gap-x-6">
          <a href={linkUrl}>
            <img
              src="/socialmedia/linkedin.webp"
              alt="Linkedin"
              class="h-10 my-5 mx-auto lg:mx-0"
            />
          </a>
          <a href={gitUrl}>
            <img
              src="/socialmedia/github.webp"
              alt="Github"
              class="h-10 my-5 mx-auto lg:mx-0"
            />
          </a>
        </div>
      </div>
    </div>

<style>
  .font {
    font-family: "IBM Plex Mono", monospace !important;
    font-size: 1.1rem;
  }
</style>
